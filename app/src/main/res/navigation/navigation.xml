<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navHomeFragment">

    <fragment
        android:id="@+id/navHomeFragment"
        android:name="com.ibrahim.quranapp.home.HomeFragment"
        android:label="@string/home_fragment_labal"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.ibrahim.quranapp.files.FilesFragment"
        android:label="القرآن الكريم"
        tools:layout="@layout/fragment_files">
        <action
            android:id="@+id/action_listFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <argument
            android:name="server"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="readerName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="rewaya"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="suras"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.ibrahim.quranapp.player.PlayerFragment"
        android:label="المشغل"
        tools:layout="@layout/fragment_player">
        <action
            android:id="@+id/action_playerFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="server"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="readerName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="rewaya"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="surahName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="position"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="surasList"
            app:argType="string" />
    </fragment>
</navigation>